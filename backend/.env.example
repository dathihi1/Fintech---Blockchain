# ================================
# Smart Trading Journal - Backend Configuration
# ================================
# Copy this file to .env and update values

# ================================
# DATABASE
# ================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://trader:password@localhost:5432/trading_journal

# ================================
# SECURITY
# ================================
# Generate new secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ================================
# FEATURES
# ================================
# Demo mode: Allow access without authentication
DEMO_MODE=true

# ================================
# ML MODELS
# ================================
# NLP model for sentiment analysis
NLP_MODEL_NAME=ProsusAI/finbert

# Use GPU for ML inference (requires CUDA)
USE_GPU=false

# ================================
# API SETTINGS
# ================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api

# ================================
# CORS
# ================================
# Allowed origins for CORS (comma-separated in production)
# Example: ["http://localhost:3000","http://localhost:5173","https://yourdomain.com"]
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_PER_MINUTE=60

# ================================
# BINANCE API (Optional)
# ================================
# Leave empty for public data only
BINANCE_API_KEY=
BINANCE_API_SECRET=
